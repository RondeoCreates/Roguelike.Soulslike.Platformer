# Called when the node enters the scene tree for the first time.
func _ready():
	#Engine.time_scale = 0.1
	var block = preload("res://Block.tscn")
	var player = preload("res://Player/Player.tscn")
	var oneway = preload("res://OneWayPlatform.tscn")
	var ladder = preload("res://Ladder.tscn")
	player.instantiate()
	#playground.reverse()
	for y in range(0, playground.size()):
		var row = playground[y]
		for x in range(0, row.size()):
			var tile = row[x]
			match tile:
				1:
					put_to_world(block.instantiate(), x, y)
				2:
					put_to_world(oneway.instantiate(), x, y)
				3:
					put_to_world(ladder.instantiate(), x, y)
				7:
					put_to_world(player.instantiate(), x, y)

func put_to_world( instance, x, y ):
	instance.translate(Vector2(x*32,y*32))
	add_child(instance)

